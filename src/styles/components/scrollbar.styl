scrollbar = '-webkit-scrollbar'
daily-view = '.qmFsL'
weekly-view = '.hnGhZ'
schedule-view = '.wcJUvc'

::{scrollbar}
  width 8px
  height 8px

{daily-view}::{scrollbar}
{weekly-view}::{scrollbar}
{schedule-view}::{scrollbar}
  width 16px
  height 16px
  background-color $background

::{scrollbar}-thumb
  min-height 40px
  border none
  border-radius 8px
  background-color $light-black
  box-shadow none

{daily-view}::{scrollbar}-thumb
{weekly-view}::{scrollbar}-thumb
{schedule-view}::{scrollbar}-thumb
  width 8px
  border 4px solid $background

:hover::{scrollbar}-thumb
::{scrollbar}-thumb:hover
  background-color $light-black

::{scrollbar}-thumb:active
  background-color darken($dark-white, 10%)

// Firefox support
:root
  scrollbar-color $light-black $background
  scrollbar-width auto
